{
  "name": "@getjoystick/joystick-js",
  "version": "0.1.2",
  "description": "Javascript SDK for Joystick",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --format=esm,cjs --minify --treeshake",
    "pretest": "npm run build",
    "lint": "eslint --ext .ts src tests examples && prettier --check .",
    "lint-fix": "eslint --fix --ext .ts src tests examples && prettier --write .",
    "test": " npx tsc -p ./tsconfig.types-test.json && jest"
  },
  "author": "getjoystick",
  "license": "MIT",
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "axios-mock-adapter": "^1.21.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "expect-type": "^0.15.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.7",
    "strong-mock": "^8.0.1",
    "ts-jest": "^29.0.5",
    "tsup": "^6.7.0",
    "typedoc": "^0.24.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/tests/.*\\.test?\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "axios": "^1.3.4",
    "crypto-js": "^4.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getjoystick/joystick-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "skipNodeModulesBundle": true,
    "bundle": true,
    "clean": true
  }
}
