{
  "name": "@getjoystick/vanilla-js",
  "version": "0.0.2",
  "description": "Vanilla JS SDK for Joystick",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**/*.js",
    "./dist/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsup --format=esm,cjs --minify",
    "pretest": "npm run build",
    "test": "jest",
    "prepatch": "npm test",
    "patch": "npm version prepatch"
  },
  "author": "getjoystick",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "axios-mock-adapter": "^1.21.2",
    "dotenv": "^16.0.3",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "strong-mock": "^8.0.1",
    "ts-jest": "^29.0.5",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/tests/.*\\.test?\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "axios": "^1.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getjoystick/joystick-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "dts": true,
    "splitting": false,
    "clean": true
  }
}
